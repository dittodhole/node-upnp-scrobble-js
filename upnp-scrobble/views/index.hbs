<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta charset="utf-8" />
  <title></title>
  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css">
  <link rel="stylesheet" href="//milligram.github.io/css/milligram.min.css">
</head>
<body class="container">
  {{#if song}}
  <div class="row">
    <div class="column">
      <h1>Currently playing</h1>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <img src="{{song.albumArtURI}}" />
    </div>
    <div class="column">
      {{song.artist}} - {{song.track}} ({{song.album}})
    </div>
  </div>
  {{/if}}
  <div class="row">
    <div class="column">
      <h2>Connected devices</h2>
    </div>
  </div>
  {{#each peer.remoteDevices}}
  <div class="row">
    <div class="column">
      <h3>{{this.friendlyName}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="column">{{this.modelName}}</div>
    <div class="column">{{this.UDN}}</div>
  </div>
  {{#each this.services}}
  {{#if this.lastMetadata}}
  <div class="row">
    <div class="column">{{this.serviceType}}</div>
    <div class="column"><pre><code>{{this.lastMetadata}}</code></pre></div>
  </div>
  {{/if}}
  {{/each}}
  {{/each}}
</body>
</html>